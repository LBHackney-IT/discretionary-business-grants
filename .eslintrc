{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true,
    "cypress/globals": true
  },
  "plugins": ["react", "cypress", "jest"],
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", { "code": 120 }],
    "require-atomic-updates": "off",
    "react/jsx-uses-vars": 2
  }
}
